<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_activity_linear_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/buffet2"
    tools:context="com.vivant.annecharlotte.go4lunch.MainActivity">

    <!-- IMAGE VIEW GO4LUNCH -->
    <ImageView
        android:layout_width="25dp"
        android:layout_height="10dp"
        android:layout_gravity="center_horizontal" />

        <!-- IMAGE VIEW GO4LUNCH -->
    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/default_large_margin"
        android:layout_marginBottom="50dp"
        android:background="@drawable/meal" />

        <!-- TITLE GO4LUNCH -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/app_name"
        android:textSize="@dimen/default_welcome_title_size"
        android:textStyle="bold"
        android:textColor="@android:color/white"/>

        <!-- DESCRIPTION GO4LUNCH -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/default_text_size"
            android:text="@string/main_activity_description"
            android:textStyle="italic"
            android:textColor="@android:color/white"
            android:layout_gravity="center_horizontal"/>

    <!-- BUTTON ALREADY CONNECTED -->
    <Button
        android:id="@+id/mainactivity_button_already_connected"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/login_already"
        android:textColor="#fff"
        android:textSize="@dimen/default_text_size"
        android:background="@color/colorPrimary"
        style="?android:attr/borderlessButtonStyle"
        android:layout_margin="@dimen/default_large_margin"
        android:padding="@dimen/default_margin"/>

            <!-- BUTTON FACEBOOK -->
            <Button
                android:id="@+id/mainactivity_button_login_facebook"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_facebook"
                android:textColor="#fff"
                android:textSize="@dimen/default_text_size"
                android:background="@drawable/facebook_button_shape"
                style="?android:attr/borderlessButtonStyle"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="@dimen/default_large_margin"
                android:padding="@dimen/default_margin"
                android:drawableStart="@drawable/facebook" />

            <!-- BUTTON GOOGLE -->
            <Button
                android:id="@+id/mainactivity_button_login_google"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/login_google"
                android:textColor="#fff"
                android:textSize="@dimen/default_text_size"
                android:background="@drawable/google_button_shate"
                style="?android:attr/borderlessButtonStyle"
                android:layout_margin="@dimen/default_large_margin"
                android:padding="@dimen/default_margin"
                android:drawableStart="@drawable/google"/>



</LinearLayout>